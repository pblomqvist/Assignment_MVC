@model ICollection<City>
@{
    ViewData["Title"] = "City Database";
}

<h1>City Database</h1>
<p>Catalogue with data pulled from a database</p>

<a asp-action="Create">Create</a>
<a asp-action="Index">Refresh list</a>

<form asp-controller="City" asp-action="Index">
    <p>
        <input type="text" placeholder="Filter by name..." name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Country Id</th>
                <th>Population</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.CityId</td>
                <td>@item.CityName</td>
                <td>@item.CountryId</td>
                <td>@item.People.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-CityId=@item.CityId>Edit</a> |
                    <a asp-action="Details" asp-route-CityId=@item.CityId>Details</a> |
                    <a asp-action="Delete" asp-route-CityId=@item.CityId>Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
