@model CityCreateViewModel

@{
    ViewData["Title"] = "Create city";
}

<h1>Create new city</h1>

<div class="row">
    <div class="col-md-4">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <select asp-for="CountryName" class="form-control" asp-items="ViewBag.CountryName"></select>
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
    <a asp-action="Index">Go back</a>
</div>