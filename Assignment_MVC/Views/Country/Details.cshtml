@model Country
@{
    ViewData["Title"] = "Country Details";
}


<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cities</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CountryId</td>
                <td>@Model.CountryName</td>
                <td>
                    @foreach (City city in Model.Cities)
                    {
                        @city.CityName<br />
                    }
                </td>
                <td>
                <a asp-action="Delete" asp-route-CountryId=@Model.CountryId>Delete country</a>
                </td>
            </tr>

        </tbody>
    </table>
    <a asp-action="Index">Go back</a>
</div>
