@model PersonCreateViewModel

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">Add person</button>

<div id="create" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create person</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body">
                <div>
                    <label asp-for="@Model.Name"></label>
                    <input id="crName" class="form-control" asp-for="@Model.Name" />
                    <span class="field-validation-error text-danger" 
            data-valmsg-for="StudentName" 
            data-valmsg-replace="true" asp-validation-for="@Model.Name"></span>
                </div>
                <div>
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input id="crPhone" class="form-control" asp-for="@Model.PhoneNumber" />
                    <span asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <div>
                    <label asp-for="@Model.City"></label>
                    <input id="crCity" class="form-control" asp-for="@Model.City" />
                    <span asp-validation-for="@Model.City"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="createNew()" class="btn btn-primary" data-bs-dismiss="modal">Create</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    
</div>