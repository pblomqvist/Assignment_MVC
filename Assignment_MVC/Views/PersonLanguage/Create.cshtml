@model PersonLanguage

<h1>PersonLanguage Database</h1>

<form asp-action="Create" method="post">
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <div class="form-group">
        <label asp-for="PersonId" class="control-label"></label>
        <select asp-for="PersonId" class="form-control" asp-items="ViewBag.People"></select>
    </div>
    <div class="form-group">
        <label asp-for="LanguageId" class="control-label"></label>
        <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Languages"></select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<a asp-action="Index">Go back</a>
